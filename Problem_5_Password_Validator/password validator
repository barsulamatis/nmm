# Ask for user's name and password
name = input("Hey there! What's your name? ")
password = input(f"Nice to meet you, {name}! Please type your password: ")

# Initialize a list to store missing rules
missing_rules = []

# Check length (at least 8 characters)
if len(password) < 8:
    missing_rules.append("Hmm... your password should be at least 8 characters long.")

# Check if it contains at least one digit
if not any(char.isdigit() for char in password):
    missing_rules.append("Try adding at least one number to your password.")

# Check if it contains at least one letter
if not any(char.isalpha() for char in password):
    missing_rules.append("Add some letters too, just numbers won't do!")

# Check if password is same as name
if password.lower() == name.lower():
    missing_rules.append("Your password shouldn't be the same as your name. Be creative!")

# Determine password strength
if len(missing_rules) == 0:
    strength = "Strong"
elif len(missing_rules) == 1:
    strength = "Medium "
else:
    strength = "Weak "

# Output the results in a friendly way
print("\nAlright, here's the deal:")
print(f"Password Strength: {strength}")
if missing_rules:
    print("You might want to fix these things:")
    for rule in missing_rules:
        print("-", rule)
else:
    print("Perfect! Your password is solid and safe. âœ…")
